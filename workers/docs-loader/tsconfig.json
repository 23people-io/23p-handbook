{
    "compilerOptions": {
        /* Compilation target and environment setup */
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "jsx": "react-jsx",
        "module": "es2022",
        "moduleResolution": "Bundler",
        /* Type definitions */
        "types": [
            "@cloudflare/workers-types/2023-07-01",
            "node"
        ],
        /* Module and file handling */
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        /* Type checking and consistency */
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        /* Shared code configuration */
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "test",
        "dist"
    ],
    "include": [
        "worker-configuration.d.ts",
        "src/**/*.ts",
        "../shared/**/*.ts" // Include shared directory TypeScript files
    ]
}